<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CounterFragment">
    <ImageView
        android:id="@+id/imageview"
        android:layout_width="45dp"
        android:layout_height="30dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="56dp"
        android:src="@drawable/menuicon"
        android:layout_marginLeft="15sp"
        android:layout_marginRight="15sp"
        app:layout_constraintEnd_toStartOf="@id/textview"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:text="STEP COUNTER"
        android:fontFamily="sans-serif-condensed-medium"
        android:textSize="22dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/giftbox"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="30sp"
        android:layout_marginRight="30sp"
        android:src="@drawable/https___lottiefiles_com_animations_gift_box_animation_uyfmxovjc7"
        app:layout_constraintStart_toEndOf="@id/textview"
        app:layout_constraintTop_toTopOf="parent"
        />

    <View
        android:layout_width="match_parent"
        android:background="#C6C4C4"
        android:layout_height="2dp"
        android:visibility="visible"
        android:layout_marginTop="20sp"
        app:layout_constraintTop_toBottomOf="@id/imageview"
        />

    <TextView
        android:id="@+id/textview2"
        android:layout_width="81dp"
        android:layout_height="30dp"
        android:paddingLeft="10sp"
        android:layout_marginTop="40sp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="Steps"
        android:layout_marginLeft="10sp"
        android:textColor="#77494646"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@id/imageview"
        app:layout_constraintTop_toBottomOf="@id/imageview"
        app:layout_constraintHorizontal_bias="1.0"
        />

    <TextView
        android:id="@+id/textview3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text=" 2165"
        android:textColor="@color/black"
        android:textSize="45dp"
        app:layout_constraintStart_toStartOf="@id/textview2"
        app:layout_constraintTop_toBottomOf="@id/textview2" />
    <FrameLayout
        android:id="@+id/framelayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="34dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/background_edittext"
        app:layout_constraintTop_toBottomOf="@id/giftbox">
        <ImageView
            android:id="@+id/diamondimageview"
            android:layout_width="74dp"
            android:layout_height="35dp"
            android:scaleType="fitStart"
            android:paddingLeft="1dp"
            android:src="@drawable/diamonds"
            ></ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="145"
            android:textSize="14sp"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="10sp"
            android:layout_marginTop="8sp"
            android:paddingLeft="5sp"
            android:paddingRight="10sp"
            android:layout_gravity="right"/>
    </FrameLayout>
    <FrameLayout
        android:id="@+id/framelayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="34dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/background_edittext"
        app:layout_constraintTop_toBottomOf="@id/framelayout1">
        <ImageView
            android:id="@+id/coinsimageview"
            android:layout_width="74dp"
            android:layout_height="35dp"
            android:scaleType="fitStart"
            android:paddingLeft="2sp"
            android:src="@drawable/coins"
            ></ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="8sp"
            android:textSize="16dp"
            android:layout_marginRight="10sp"
            android:text="326" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/framelayout3"
        android:layout_width="134dp"
        android:layout_height="51dp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="@id/textview3"
        app:layout_constraintTop_toBottomOf="@id/textview3">

        <ImageView
            android:layout_width="44dp"
            android:layout_height="35dp"
            android:paddingLeft="4sp"
            android:scaleType="fitStart"
            android:src="@drawable/fire"></ImageView>

        <TextView
            android:id="@+id/calories"
            android:layout_width="86dp"
            android:layout_height="45dp"
            android:layout_gravity="right"
            android:layout_marginTop="0sp"
            android:textStyle="bold"
            android:layout_marginRight="0sp"
            android:text="184 kcal Calories"
            android:textSize="16dp" />
    </FrameLayout>
    <FrameLayout
        android:id="@+id/framelayout4"
        android:layout_width="134dp"
        android:layout_height="51dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@id/framelayout3"
        app:layout_constraintTop_toBottomOf="@id/framelayout3">

        <ImageView
            android:layout_width="44dp"
            android:layout_height="35dp"
            android:paddingLeft="4sp"
            android:scaleType="fitStart"
            android:src="@drawable/distance"></ImageView>

        <TextView
            android:id="@+id/distance"
            android:layout_width="86dp"
            android:layout_height="45dp"
            android:layout_gravity="right"
            android:textStyle="bold"
            android:layout_marginTop="0sp"
            android:layout_marginRight="0sp"
            android:text="3.8km Distance"
            android:textSize="16dp" />

    </FrameLayout>
    <FrameLayout
        android:id="@+id/framelayout5"
        android:layout_width="134dp"
        android:layout_height="51dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@id/framelayout4"
        app:layout_constraintTop_toBottomOf="@id/framelayout4">

        <ImageView
            android:layout_width="44dp"
            android:layout_height="35dp"
            android:paddingLeft="4sp"
            android:scaleType="fitStart"
            android:src="@drawable/duration__2_"></ImageView>

        <TextView
            android:id="@+id/duration"
            android:layout_width="86dp"
            android:layout_height="45dp"
            android:layout_gravity="right"
            android:textStyle="bold"
            android:layout_marginTop="0sp"
            android:layout_marginRight="0sp"
            android:text=" 55m 45s Duration"
            android:textSize="16dp" />

    </FrameLayout>
    <ImageView
        android:id="@+id/maingif"
        android:layout_width="180dp"
        android:layout_height="300dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:scaleType="centerCrop"
        android:src="@drawable/mainanimation"
        app:layout_constraintTop_toBottomOf="@id/framelayout2"/>

    <FrameLayout
        android:layout_width="320dp"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:id="@+id/framelayout6"
        android:layout_marginStart="25sp"
        android:layout_marginEnd="25sp"
        android:layout_marginTop="0sp"
        app:layout_constraintTop_toBottomOf="@id/maingif"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/background_edittext"
        >
        <ImageView
            android:id="@+id/imageview3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:src="@drawable/water_hydration_illustration"/>

        <TextView
            android:id="@+id/textview4"
            android:layout_width="148dp"
            android:layout_height="38dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10sp"
            android:paddingLeft="25sp"
            android:text="Water Hydration 0/2200 ml"
            android:textStyle="bold" />

        <Button
            android:layout_width="90dp"
            android:layout_height="32dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="60sp"
            android:textStyle="bold"
            android:paddingTop="5sp"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:background="@drawable/background_button2"
            android:text="Drink"

            />

        <ImageView
            android:id="@+id/imageview4"
            android:layout_width="93dp"
            android:layout_height="90dp"
            android:layout_gravity="end"
            android:layout_marginRight="10sp"
            android:layout_marginLeft="100dp"
            android:src="@drawable/https___lottiefiles_com_animations_water_glass_with_alarm_animation_ikxifbzhmo" />
    </FrameLayout>

    <com.qamar.curvedbottomnaviagtion.CurvedBottomNavigation
        android:id="@+id/curvedbottomnavigation"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        app:cbn_background="@color/white"
        app:cbn_fabColor="@color/white"
        app:cbn_height="75dp"
        app:cbn_icon_size="23dp"
        app:cbn_iconColor="@color/black"
        android:elevation="15sp"
        app:cbn_curve_radius="67dp"
        app:cbn_selected_icon_size="50sp"
        app:cbn_selectedIconColor="#B69CE4"
        app:layout_constraintBottom_toBottomOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>