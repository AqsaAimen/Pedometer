<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".counter.AchievementsFragment">

    <TextView
        android:id="@+id/textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="ACHIEVEMENTS"
        android:paddingRight="10sp"
        android:paddingLeft="10sp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <View
        android:id="@+id/view6"
        android:layout_width="match_parent"
        android:background="#0C0C0C"
        android:layout_height="2dp"
        android:visibility="visible"
        android:layout_marginTop="20sp"
        app:layout_constraintTop_toBottomOf="@id/textview"
        />

    <ImageView
        android:id="@+id/imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/backarrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/achiev"
        android:layout_width="361dp"
        android:layout_height="147dp"
        android:layout_margin="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view6" />

    <TextView
        android:id="@+id/textview13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:text=" Top Distance"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="@id/achiev"
        app:layout_constraintTop_toTopOf="@id/achiev"
        tools:layout_editor_absoluteX="30dp" />

    <TextView
        android:id="@+id/textview14"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_marginTop="40dp"
        android:text=" 21 "
        android:textSize="60dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/achiev"
        app:layout_constraintTop_toTopOf="@id/achiev" />

    <TextView
        android:id="@+id/textview15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:paddingRight="30sp"
        android:text=" KM"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/textview14"
        app:layout_constraintTop_toBottomOf="@id/textview13" />

    <ImageView
        android:id="@+id/imageview15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:src="@drawable/location"
        app:layout_constraintBottom_toBottomOf="@id/achiev"
        app:layout_constraintEnd_toEndOf="@id/achiev" />
    <TextView
        android:id="@+id/textview16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:textStyle="bold"
        android:text=" 2km  Distance you achieved"
        app:layout_constraintBottom_toBottomOf="@id/achiev"
        app:layout_constraintStart_toStartOf="@id/achiev"
        android:layout_marginBottom="10sp"
        android:textSize="18dp"/>
    <View
        android:id="@+id/achiev2"
        android:layout_width="361dp"
        android:layout_height="147dp"
        android:layout_margin="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/achiev" />

    <TextView
        android:id="@+id/textview17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:text=" Top Steps"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="@id/achiev2"
        app:layout_constraintTop_toTopOf="@id/achiev2"
        tools:layout_editor_absoluteX="30dp" />

    <TextView
        android:id="@+id/textview18"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_marginTop="40dp"
        android:text=" 2K "
        android:textSize="60dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/achiev2"
        app:layout_constraintTop_toTopOf="@id/achiev2" />

    <TextView
        android:id="@+id/textview19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:paddingRight="30sp"
        android:text=" Steps"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/textview18"
        app:layout_constraintTop_toBottomOf="@id/textview17" />

    <ImageView
        android:id="@+id/imageview16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:src="@drawable/footprint"
        app:layout_constraintBottom_toBottomOf="@id/achiev2"
        app:layout_constraintEnd_toEndOf="@id/achiev2" />
    <TextView
        android:id="@+id/textview120"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:textStyle="bold"
        android:text=" 2k steps you achieved"
        app:layout_constraintBottom_toBottomOf="@id/achiev2"
        app:layout_constraintStart_toStartOf="@id/achiev2"
        android:layout_marginBottom="10sp"
        android:textSize="18dp"/>
    <View
        android:id="@+id/achiev3"
        android:layout_width="361dp"
        android:layout_height="147dp"
        android:layout_margin="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/achiev2" />

    <TextView
        android:id="@+id/textview21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:text=" Most Time Spend"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="@id/achiev3"
        app:layout_constraintTop_toTopOf="@id/achiev3"
        tools:layout_editor_absoluteX="30dp" />

    <TextView
        android:id="@+id/textview22"
        android:layout_width="110dp"
        android:layout_height="79dp"
        android:layout_marginTop="30dp"
        android:text="145 "
        android:textSize="60dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/achiev3"
        app:layout_constraintTop_toTopOf="@id/achiev3" />

    <TextView
        android:id="@+id/textview23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:paddingRight="30sp"
        android:text="mins"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/textview22"
        app:layout_constraintTop_toBottomOf="@id/textview21" />

    <ImageView
        android:id="@+id/imageview18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:src="@drawable/alarm"
        app:layout_constraintBottom_toBottomOf="@id/achiev3"
        app:layout_constraintEnd_toEndOf="@id/achiev3" />
    <TextView
        android:id="@+id/textview123"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:textStyle="bold"
        android:text="145 mins duration you achieved"
        app:layout_constraintBottom_toBottomOf="@id/achiev3"
        app:layout_constraintStart_toStartOf="@id/achiev3"
        android:layout_marginBottom="10sp"
        android:textSize="18dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>